# UptimeRobot API Key
# Get your API key from: https://uptimerobot.com/ > My Settings > API Settings
# Use a read-only API key or account-specific API key
UPTIMEROBOT_API_KEY=your_uptimerobot_api_key

# Bark Device Key
# Get your device key from the Bark app
BARK_DEVICE_KEY=your_bark_device_key

# Bark Server URL (optional)
# Default: https://api.day.app
# You can use your own Bark server if you have one
BARK_SERVER_URL=https://api.day.app

# Cron Schedule (optional)
# Default: */5 * * * * (every 5 minutes)
# See https://crontab.guru/ for help with cron expressions
CRON_SCHEDULE=*/5 * * * *

# Monitor IDs to check (optional)
# Comma-separated list of monitor IDs
# If not set, all monitors from your account will be checked
# Example: MONITOR_IDS=123456789,987654321
# MONITOR_IDS=

# Send Recovery Notifications (optional)
# Set to 'false' to disable recovery notifications when websites come back online
# Default: true
SEND_RECOVERY_NOTIFICATIONS=true

# Notification Sounds (optional)
# Sound to use for down notifications
# See Bark documentation for available sounds
DOWN_NOTIFICATION_SOUND=alert

# Sound to use for recovery notifications
RECOVERY_NOTIFICATION_SOUND=complete

# Send Startup Notification (optional)
# Set to 'false' to disable the notification when the service starts
# Default: true
SEND_STARTUP_NOTIFICATION=true

# Notification Language (optional)
# Set to 'zh' for Chinese or 'en' for English
# Default: en
NOTIFICATION_LANGUAGE=en

# Notify Only On Status Change (optional)
# Set to 'true' to only send notifications when websites go down
# This will disable startup and recovery notifications
# Default: false
NOTIFY_ONLY_ON_STATUS_CHANGE=false

